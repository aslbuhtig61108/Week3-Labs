import java.util.Scanner;

public class numbers1 {

	public static void main(String[] args) {
		 // Using a user provided word, create a new array that is made up of 
	    // the characters of the word stored in the variable userWord. Once you 
	    // have created that array, print to the console each element of the array.

	    Scanner kb = new Scanner(System.in);
	    String userWord = kb.next();
	    System.out.println("The word is : " + userWord);
	    
	    String[userWord.length()] newWord = new String[userWord.length()];
	    
	    
	    System.out.println(newWord[0]);
	   
	    
	    
	}

}
